<%# Messags partial %>
<div id="message-<%= message.id %>" class="message <%= 'current-user' if message.user == current_user %>">
  <small>
    <strong><%= message.user.first_name %></strong>
    <i><%= message.created_at.in_time_zone("Asia/Makassar").strftime("%a %b %e at %l:%M %p") %></i>
  </small>
  <p><%= message.content %></p>
</div>
