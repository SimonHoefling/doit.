<p style="color: green"><%= notice %></p>

<%= render @category %>


<%# This renders only the tasks that are available %>
<h2>These are the tasks for the category education</h2>
<ul>
  <% @tasks.each do |task| %>
    <% if task.task_status == "available" %>
      <%= link_to task.name, task_path(task) %>
      <li><%= task.description %></li>
      <li>Posted by: <%= task.user.first_name %> <%= task.user.last_name %></li>
      <hr>
    <% end %>
  <% end %>
</ul>


<%# Savety check that only the user with the email 'simon@gmail.com'
can edit and delete the category %>
<% if current_user.email == 'simon@gmail.com' %>
  <%= link_to "Edit this category", edit_category_path(@category) %> |
  <%= button_to "Destroy this category", @category, method: :delete %>
<% end %>
<%= link_to "Back to categories", root_path %>
