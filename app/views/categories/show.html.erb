<p style="color: green"><%= notice %></p>

<%= render @category %>

<h2>Tasks</h2>
<ul>
  <% @tasks.each do |task| %>
    <li><%= task.name %></li>
    <p><%= task.description %></p>
  <% end %>
</ul>


<div>
  <%= link_to "Edit this category", edit_category_path(@category) %> |
  <%= link_to "Back to categories", root_path %>



  <%= button_to "Destroy this category", @category, method: :delete %>
</div>
