<%# Log in form conatiner %>
<div class="new-task-container">
  <%= simple_form_for(@task, data: { controller: 'flatpickr' }) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.label :name, "Add a tilte for you task*" %>
      <%= f.text_field :name,
                  required: true,
                  class: 'form-control' %>

      <%= f.label :description, "Write a short description for what exactly you need help with*" %>
      <%= f.text_area :description,
                  required: true,
                  class: 'form-control' %>

      <%= f.association :category,
                  label: "Select a category",
                  class: 'form-control' %>

      <div class="file-input">
        <%= f.label :photo, "ðŸ“· Upload a photo (max. 4)", class: 'upload-photo' %>
        <%= f.file_field :photo,
                required: false,
                multiple: true,
                class: 'd-none' %>

      </div>

      <%= f.label :start_time, "Add a start date (starts immediately if not selected)" %>
      <%= f.text_field :start_time,
                  required: false,
                  data: { flatpickr_target: "startTime",
                  min_date: Date.today.strftime('%Y-%m-%d') },
                  class: 'form-control' %>

      <%= f.label :location, "Where do you need to get it done*" %>
      <%= f.text_field :location,
                  required: true,
                  class: 'form-control' %>

      <%= f.label :price, "Add a price (in IDR)*" %>
      <%= f.text_field :price,
                  required: true,
                  class: 'form-control' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit,
                  class: 'form-btn' %>
    </div>
  <% end %>
</div>
