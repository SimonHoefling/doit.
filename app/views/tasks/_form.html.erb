<%= simple_form_for(@task, data: { controller: 'flatpickr' }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name,
                required: true %>
    <%= f.input :description,
                required: true %>
    <%= f.association :category %>
    <%= f.input :photo, as: :file,
                required: false,
                input_html: { multiple: true },
                label: "Task photo (max. 4 Photos)" %>
    <%= f.input :start_time, as: :string,
                required: false,
                input_html: { data: { flatpickr_target: "startTime",
                min_date: Date.today.strftime('%Y-%m-%d') } },
                label: "Start date (starts immediately if not selected)" %>
    <%= f.input :location,
                required: true,
                label: "Add City" %>
    <%= f.input :price,
                required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
